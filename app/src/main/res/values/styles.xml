<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/select_company</item>
        <item name="colorControlActivated">@color/select_company</item>
        <item name="colorControlHighlight">@color/select_company</item>
    </style>

    <!-- Base application theme. -->
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Customize your theme here. -->
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorControlActivated">@color/select_company</item>
    </style>

</resources>
